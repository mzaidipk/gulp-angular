{
    "env": {
        "browser": true,
        "commonjs": false,
        "node": true
    },
    "extends": ["eslint:recommended", "angular"],
    "rules": {
        "no-mixed-spaces-and-tabs": [
            2, 
            "smart-tabs"
        ],
        // "indent": [
        //     "error",
        //     "tab"
        // ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "off" 
            , { "allow": ["off", "warn", "error"] }
        ],
        "angular/controller-name": [
            0
        ],
        "angular/log": [
            0
        ]
    }
}